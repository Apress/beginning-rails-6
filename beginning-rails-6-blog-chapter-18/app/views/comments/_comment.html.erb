<div class="comment" id="comment-<%= comment.id %>">
  <h3>
    <%= comment.name %> &lt;<%= comment.email %>&gt; <%= t("comments.said") %>:
    <% if @article.owned_by? current_user %>
      <span class="actions">
        <%= link_to t("general.delete"), article_comment_path(article_id: @article, id: comment), confirm: t("general.are_you_sure"), method: :delete, remote: true %>
      </span>
    <% end %>
  </h3>
  <%= comment.body %>
</div>
