<%= render partial: @article, locals: { cover_image_options: [500, 500] } %>

<%= link_to t("general.email_a_friend"), '#', onclick: "document.querySelector('#notify_friend').style.display = 'block';return false;" %>

<div id="notify_friend" style="display:none;">
  <%= render 'notify_friend', article: @article %>
</div>

<h3><%= t("comments.comments") %></h3>

<div id="comments">
  <%= render @article.comments %>
</div>

<%= link_to t("comments.new_comment"), new_article_comment_path(@article), remote: true, id: 'new_comment_link' %>
